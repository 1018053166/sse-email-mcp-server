        "host": "pop.gmail.com",
        "port": 995,
        "secure": true,
        "tls": true
      }
    },
    "outlook": {
      "smtp": {
        "host": "smtp.office365.com",
        "port": 587,
        "secure": false,
        "requireTLS": true
      },
      "imap": {
        "host": "outlook.office365.com",
        "port": 993,
        "secure": true,
        "tls": true
      },
      "pop3": {
        "host": "outlook.office365.com",
        "port": 995,
        "secure": true,
        "tls": true
      }
    },
    "qq": {
      "smtp": {
        "host": "smtp.qq.com",
        "port": 587,
        "secure": false,
        "requireTLS": true,
        "tlsOptions": {
          "rejectUnauthorized": false
        }
      },
      "imap": {
