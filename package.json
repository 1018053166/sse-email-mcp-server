    "bin",
    "src",
    "config.example.json",
    "README.md"
  ],
  "dependencies": {
    "nodemailer": "^8.0.0",
    "imap": "^0.8.17",
    "mailparser": "^3.6.5",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
