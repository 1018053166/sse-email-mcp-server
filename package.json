  "bin": {
    "sse-email-mcp": "bin/sse-email-mcp.js"
  },
  "scripts": {
    "start": "node bin/sse-email-mcp.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "sse",
    "email",
    "smtp",
    "imap",
    "pop3",
    "nodemailer",
    "mail",
    "server-sent-events"
  ],
  "author": "1018053166",
  "repository": {
    "type": "git",
